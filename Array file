#include <iostream>
using namespace std;

int main() {
    int numbers[10];

    // Input 10 numbers into the array
    cout << "Enter 10 numbers: ";
    for (int i = 0; i < 10; i++) {
        cin >> numbers[i];
    }

    // Replace even numbers with 1 and odd numbers with 0
    for (int i = 0; i < 10; i++) {
        if (numbers[i] % 2 == 0) {
            numbers[i] = 1;
        } else {
            numbers[i] = 0;
        }
    }

    // Output the modified array
    cout << "Modified array: ";
    for (int i = 0; i < 10; i++) {
        cout << numbers[i] << " ";
    }
    cout << endl;

    return 0;
}
